{
  "compilerOptions": {
    "rootDir": "./src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "lib": ["ES2022"],
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "disableSourceOfProjectReferenceRedirect": true,
    "tsBuildInfoFile": ".cache/tsbuildinfo.json",
    "strict": true,
    "checkJs": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "outDir": "dist"
  },

  "include": ["src/**/*", "eslint.config.ts", "drizzle.config.ts"],

  "exclude": [
    "node_modules",
    "build",
    "dist",
    ".next",
    ".expo",
    "drizzle.config.ts"
  ]
}
